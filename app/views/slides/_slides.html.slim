.table-responsive
  table.table.table-striped
    thead
      tr
        th(style="width: 8%") Site
        th Title
        th(style="width: 15%") Author
        th(style="width: 5%") Bookmark
        th(style="width: 12%") Bookmarked at
        th(style="width: 10%") Published at
    tbody
      - slides.each do |slide|
        tr
          td= slide.site_name
          td= link_to slide.title, slide.url
          td= slide.author_name
          td= bookmark_link(slide)
          td= l(slide.bookmarked_at)
          td= l(slide.published_at.to_date)
